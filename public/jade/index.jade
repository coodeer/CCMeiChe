extends layout
block content
  .menu

  .aside
    h2.h2 手机 #{user.phone}
    .credit 积分：#{user.credit}
    ul.menus
      li.item
        a(href="/myorders") 我的订单
      li.item
        a(href="/myinfos") 我的信息
      li.item
        a(href="/recharge") 充值
      li.item
        a(href="/help") 帮助
    a.button(href="/logout") 退出登录

  .overlay

  .container
    h1.title 洗车啦
    .section
      h2 手机 #{user.phone}
    .section
      .cars
        table.selected-cars
          tr
            td.cars-cell
              ul
                each car,i in user.cars || []
                  if car["default"]
                    li(data="#{JSON.stringify(car)}")
                      .detail
                        .type #{car.type}#{car.color}
                        .number #{car.number}
            td
              .arrow
                .icon
        .add
          i.icon-add
          | 添加车辆
    .section
      h2 请选择您需要的服务
      ul.services
        - var service = services[0];
        li.active
          .detail
            .title #{service.title}
            .desc #{service.describe}
          .arrow &gt;
          .price ￥#{service.price}
    .section.credit
      .mine 您的积分：#{user.credit || 0}
      .use 使用积分
    if user.promos && user.promos.length
      .section
        h2 优惠券
      ul.promos
        each promo in user.promos
          li #{promo.title}

    .section
      .payment
        .inner
          .title 支付金额
          .num ￥
            span.count 0
    .section.address
      h2 地址
      input#latlng(type="hidden")
      .location
        input#address.input(data-pattern="/api/v1/location/suggestion/{q}")
        i.icon
      .carpark
        input.input(placeholder="具体位置 如B215车位")
      .note 注：一地址一订单，其他地址请另行下单

    .section
      #go-wash.button 欧耶洗车啦
  script.
    var services = !{JSON.stringify(services)};
    facade({
      entry: "ccmeiche/pages/home.js"
    });