extends layout
block content

  .blank

  include menu

  .container
    .section(style="padding-top:7px")
      h2 手机 #{user.phone}
    .section
      .cars
        table.selected-cars
          tr
            td.cars-cell
              ul
                each car,i in user.cars || []
                  if car["default"]
                    li(data="#{JSON.stringify(car)}")
                      .detail
                        .type #{car.type}#{car.color}
                        .number #{car.number}
            td.arrow-cell
              .arrow
                .icon
        if !user.cars || user.cars.length < 5
          .add.addcar
            i.icon-add
            | 添加车辆
    .section
      h2 请选择您需要的服务
      ul.services
        - var service = services[0];
        li.active
          .detail
            .title #{service.title}
            .desc #{service.describe}
          .arrow
          .price ￥#{service.price}
    if user.promo
      .section.promo(style="display:none")
        | 使用服务优惠券
        .count
          span.num
            .text 1
            select
          | 张
    .section.credit
      | 我的积分：
      span.num #{user.credit||0}
      .use
        span.text 未使用
        i.icon

    .section
      .payment
        .inner
          .title 支付金额
          .num ￥
            span.count 0
    .section.address
      h2 地址
      input#latlng(type="hidden")
      .location
        input#address.input(data-pattern="/api/v1/location/suggestion/{q}")
        i.icon
      .carpark
        input#carpark.input(placeholder="具体位置 如B215车位")
      .note 注：一地址一订单，其他地址请另行下单

    .section.go-wash-section
      #go-wash.button 欧耶洗车啦
  script.
    var services = !{JSON.stringify(services)};
  +facade("menu")
  +facade("home")